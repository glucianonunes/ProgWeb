<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h1 id="tables">Lista de Cursos <a href="/curso/create" method="get" class="btn btn-primary">Adicionar Novo Curso</a></h1>
            </div>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Sigla</th>
                            <th scope="col">Nome</th>
                            <th scope="col">Opções</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each cursos}}
                        <tr>
                            <td>{{sigla}}</td>
                            <td>{{nome}}</td>
                            <td class="options">
                                <a href="/curso/{{id}}" class="btn btn-sm btn-info">Ver Detalhes</a>
                                <a href="/curso/update/{{id}}" class="btn btn-sm btn-warning">Editar</a>
                                <a href="/curso/remove/{{id}}" class="btn btn-sm btn-danger">Remover</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
